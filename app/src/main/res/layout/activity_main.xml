<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Добавляем ImageView для фона -->
    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Добавляем второй ImageView по центру -->
    <ImageView
        android:id="@+id/centerImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/board"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Добавляем третий ImageView поменьше и делаем его кликабельным -->

    <ImageView
        android:id="@+id/clickableImageView"
        android:layout_width="136dp"
        android:layout_height="129dp"
        android:clickable="true"
        android:onClick="onSmallImageClick"
        android:src="@drawable/paper"
        app:layout_constraintBottom_toBottomOf="@id/centerImageView"
        app:layout_constraintEnd_toEndOf="@id/centerImageView"
        app:layout_constraintHorizontal_bias="0.645"
        app:layout_constraintStart_toStartOf="@id/centerImageView"
        app:layout_constraintTop_toTopOf="@id/centerImageView"
        app:layout_constraintVertical_bias="0.822" />

    <ImageView
        android:id="@+id/clickableImageView2"
        android:layout_width="136dp"
        android:layout_height="129dp"
        android:clickable="true"
        android:onClick="onSmallImageClick2"
        android:src="@drawable/paper2"
        app:layout_constraintBottom_toBottomOf="@id/centerImageView"
        app:layout_constraintEnd_toEndOf="@id/centerImageView"
        app:layout_constraintHorizontal_bias="0.645"
        app:layout_constraintStart_toStartOf="@id/centerImageView"
        app:layout_constraintTop_toTopOf="@id/centerImageView"
        app:layout_constraintVertical_bias="0.155" />

    <ImageView
        android:id="@+id/AchiveButton"
        android:layout_width="103dp"
        android:layout_height="83dp"
        android:clickable="true"
        android:onClick="onAchiveButtonClick"
        android:src="@drawable/corona"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.974"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.048" />


</androidx.constraintlayout.widget.ConstraintLayout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/centerImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/board5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/clickableAchievements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:onClick="onAchievementsClick"
        android:src="@drawable/achievements"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/clickableImageView2"
        android:layout_width="136dp"
        android:layout_height="129dp"
        android:clickable="true"
        android:onClick="onSmallImageClick2"
        android:src="@drawable/susanin"
        app:layout_constraintBottom_toBottomOf="@id/centerImageView"
        app:layout_constraintEnd_toEndOf="@id/centerImageView"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="@id/centerImageView"
        app:layout_constraintTop_toTopOf="@id/centerImageView"
        app:layout_constraintVertical_bias="0.311" />

    <ImageView
        android:id="@+id/anotherSmallImage"
        android:layout_width="136dp"
        android:layout_height="129dp"
        android:clickable="true"
        android:onClick="onAnotherSmallImageClick"
        android:src="@drawable/dolgorukiy"
        app:layout_constraintBottom_toBottomOf="@id/centerImageView"
        app:layout_constraintEnd_toEndOf="@id/centerImageView"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintStart_toStartOf="@id/centerImageView"
        app:layout_constraintTop_toTopOf="@id/centerImageView"
        app:layout_constraintVertical_bias="0.637" />

    <LinearLayout
        android:id="@+id/interactionLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/centerImageView"
        app:layout_constraintEnd_toEndOf="@id/centerImageView"
        app:layout_constraintStart_toStartOf="@id/centerImageView"
        app:layout_constraintTop_toTopOf="@id/centerImageView">



    </LinearLayout>


    <ImageView
        android:id="@+id/bigpaperImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bigpaper"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Что-то интересоное"
        android:textSize="20dp"
        android:visibility="gone"
        android:textColor="@color/grey"
        app:layout_constraintBottom_toBottomOf="@id/centerImageView"
        app:layout_constraintEnd_toEndOf="@id/centerImageView"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="@id/centerImageView"
        app:layout_constraintTop_toTopOf="@id/centerImageView"
        app:layout_constraintVertical_bias="0.356" />

    <ImageView
        android:id="@+id/buttonImage2"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_marginBottom="200dp"
        android:clickable="true"
        android:onClick="onButtonImage2Click"
        android:visibility="gone"
        android:src="@drawable/galochka"
        app:layout_constraintBottom_toBottomOf="@id/centerImageView"
        app:layout_constraintEnd_toEndOf="@id/centerImageView"
        app:layout_constraintHorizontal_bias="0.914"
        app:layout_constraintStart_toStartOf="@id/centerImageView" />


    <ImageView
        android:id="@+id/buttonImage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="4dp"
        android:visibility="gone"
        android:clickable="true"
        android:onClick="onButtonImage1Click"
        android:src="@drawable/back"
        app:layout_constraintEnd_toEndOf="@id/centerImageView"
        app:layout_constraintTop_toTopOf="@id/centerImageView" />

    <ImageView
        android:id="@+id/imageStat"
        android:layout_width="237dp"
        android:layout_height="274dp"
        android:src="@drawable/statuia"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.628" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Квест 1"
        android:textColor="#000000"
        android:textSize="25dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/centerImageView"
        app:layout_constraintEnd_toEndOf="@id/centerImageView"
        app:layout_constraintHorizontal_bias="0.322"
        app:layout_constraintStart_toStartOf="@id/centerImageView"
        app:layout_constraintTop_toTopOf="@id/centerImageView"
        app:layout_constraintVertical_bias="0.274" />

</androidx.constraintlayout.widget.ConstraintLayout>